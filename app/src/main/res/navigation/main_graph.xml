<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/todayFragment">

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.training.tri.workout.ui.WorkoutFragment"
        android:label="fragment_workout"
        tools:layout="@layout/fragment_workout" >
        <action
            android:id="@+id/action_todayFragment_to_logWorkoutFragment"
            app:destination="@id/logWorkoutFragment"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.training.tri.presentation.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/logWorkoutFragment"
        android:name="com.training.tri.presentation.log.LogWorkoutFragment"
        android:label="fragment_log_workout"
        tools:layout="@layout/fragment_log_workout" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.training.tri.presentation.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
</navigation>